{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "编译 Debug",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "cmake --preset Debug && cmake --build --preset Debug && arm-none-eabi-objcopy -O binary -S build/Debug/CtrBoard-H7_DBUS.elf build/Debug/CtrBoard-H7_DBUS.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "编译 Release",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "cmake --preset Release && cmake --build --preset Release && arm-none-eabi-objcopy -O binary -S build/Release/CtrBoard-H7_DBUS.elf build/Release/CtrBoard-H7_DBUS.bin"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "烧录 Debug",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/stm32h7x.cfg",
                "-c", "program build/Debug/CtrBoard-H7_DBUS.bin 0x08000000 verify reset exit"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "statusbar": {
                    "label": "烧录完成!"
                }
            }
        },
        {
            "label": "烧录 Release",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/stm32h7x.cfg",
                "-c", "program build/Release/CtrBoard-H7_DBUS.bin 0x08000000 verify reset exit"
            ],
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "statusbar": {
                    "label": "烧录完成!"
                }
            }
        },
        {
            "label": "编译烧录 Debug",
            "dependsOn": [
                "编译 Debug", 
                "烧录 Debug"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "编译烧录 Release",
            "dependsOn": [
                "编译 Release", 
                "烧录 Release"
            ],
            "dependsOrder": "sequence",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "清理",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Test-Path build) { Remove-Item -Recurse -Force build }"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
} 